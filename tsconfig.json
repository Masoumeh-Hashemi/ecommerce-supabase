{
    "compilerOptions": {
    "target": "ESNext" ,
    "module": "commonjs",
    "moduleResolution": "node" ,
    "baseUrl": "src" ,
    "paths": {
      "@/*": ["*"]
    },

    "resolveJsonModule": true ,
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true ,
    "strict": true 

},
"include": ["src"],
"exclude": [ "./dist"]
}

